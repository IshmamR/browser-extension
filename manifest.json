{
	"name": "iLinks",
	"description": "Open your links with just a click!",
	"version": "1.0.0",
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"32": "icon32.png",
		"16": "icon16.png"
	},

	"content_scripts": [
    	{
			"matches": ["*://*.*/*"],
			"js": ["background.js"]
		}
	],
	"browser_action": {
		"default_icon": "icon16.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"*://duckduckgo.com/html/*",
		"storage",
		"https://www.google.com/"
	],
	"manifest_version": 2
}